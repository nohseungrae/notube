extends layouts/main
block content
    .form-container
        form(action=routes.editVideo(video.id), method="post")
            input(type="text", placeholder="Title", name="title", value=video.title)
            textarea(type="text", placeholder="description", name="description")=video.description
            input(type="submit", value="Update Video")
        a.form-container_link.form-container_link--delete(href=routes.deleteVideo(video.id)) Delete Video